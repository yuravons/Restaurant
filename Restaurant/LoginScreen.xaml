<Window x:Class="Restaurant.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Restaurant"
        mc:Ignorable="d"
        Title="Логінізація" Height="300" Width="300" Background="#1dc0ff">
    <Grid>
        <StackPanel>
            <Label FontFamily="Corbel" Content="Логін" Foreground="White" FontSize="25" HorizontalAlignment="Center"></Label>
            <Separator></Separator>
            <Label FontFamily="Corbel" FontSize="14" Content="Ідентифікатор користувача" Foreground="White"/>
            <TextBox FontFamily="Corbel" Name="txtUsername" Background="#545d6a" Foreground="White" FontSize="18"/>
            <Label FontFamily="Corbel" FontSize="14" Content="Пароль" Foreground="White"/>
            <PasswordBox FontFamily="Corbel" Name="txtPassword" Background="#545d6a" Foreground="White" FontSize="18"/>
            <Button FontFamily="Corbel" x:Name="btnSubmit" Content="Підтвердити" Margin="60 30" Background="#545d6a" Foreground="White" FontSize="18" Click="BtnSubmit_Click"/>
        </StackPanel>
    </Grid>
</Window>
