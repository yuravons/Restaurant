<Window x:Class="Restaurant.Admin.AddStatus"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Restaurant.Admin"
        mc:Ignorable="d"
        Title="AddStatus" Height="252" Width="615">
    <Grid Margin="0,0,2,17">
        <Grid.RowDefinitions>
            <RowDefinition Height="147*"/>
            <RowDefinition Height="43*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Center" Margin="0,30" TextWrapping="Wrap" Text="Статус" VerticalAlignment="Top" FontSize="20"/>
        <TextBlock x:Name="statusToAdd" HorizontalAlignment="Left" Margin="158,74,0,0" TextWrapping="Wrap" Text="Назва" VerticalAlignment="Top"/>
        <Button x:Name="addStatusBtn" Content="Додати" HorizontalAlignment="Left" Margin="278,126,0,0" VerticalAlignment="Top" Width="59" Height="22" Click="AddStatusBtn_Click"/>
        <TextBox x:Name="statusTextBox" HorizontalAlignment="Left" Height="22" Margin="222,74,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="211"/>
    </Grid>
</Window>
