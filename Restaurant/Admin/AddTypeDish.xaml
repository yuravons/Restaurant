        </Menu>
        <TextBlock FontFamily="Corbel" x:Name="textBlock" HorizontalAlignment="Center" Margin="254,43,229,0" TextWrapping="Wrap" Text=" Тип страви" VerticalAlignment="Top" FontSize="20" Width="122"/>
