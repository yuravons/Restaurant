        <TextBox FontFamily="Corbel" FontSize="14" x:Name="typeDishTextBox" HorizontalAlignment="Left" Height="22" Margin="222,87,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="211"/>
    </Grid>
